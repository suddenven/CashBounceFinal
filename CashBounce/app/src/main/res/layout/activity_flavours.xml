<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chanjinghong.cashbounce.Flavours"
    android:background="#ffffa6fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Default"
        android:textSize="42dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/listView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/listView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/decriptiontext"
        android:hint="Favour description"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="Amount to deduct"
        android:layout_below="@+id/decriptiontext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Submit"
        android:id="@+id/button"
        android:onClick="sendMessage"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:background="#fffffbba"
        android:backgroundTint="#ffd1ffad" />

    </LinearLayout>


</RelativeLayout>