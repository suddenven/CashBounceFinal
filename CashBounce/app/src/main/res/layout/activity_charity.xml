<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chanjinghong.cashbounce.charity"
    android:background="#ffa5ffef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/imageView4"
        android:src="@drawable/smiley"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home For the needy"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="32dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/ratingBar2"
            android:layout_above="@+id/donateBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Donate"
        android:id="@+id/donateBtn"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Back"
        android:id="@+id/backBtnB"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/donateBtn"
        android:layout_toStartOf="@+id/donateBtn" />

    </LinearLayout>
</RelativeLayout>
